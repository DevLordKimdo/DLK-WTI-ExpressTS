<!DOCTYPE html>
<html lang="kr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Db Crud Basic List</title>
</head>
<link rel="stylesheet" href="/css/styles.css">
<body>
	<table>
	    <colgroup> 
	    	<col style="width: 10%;"/>
	        <col style="width: 40%;"/>
	        <col style="width: 20%;"/>
	        <col style="width: 20%;"/>
	        <col style="width: 10%;"/>
	    </colgroup>
		<thead>
		    <tr>
		        <th>번호</th>
		        <th>제목</th>
		        <th>이름</th>
		        <th>날짜</th>
		        <th>조회</th>
		    </tr>
	    </thead>
	    <tbody>
			<% list.forEach((list, idx) => { %>
				<tr>
					<td><%= list.idx %></td>
					<td><a href="/tmpl/db/crud/basic/read/<%= list.idx %>"><%= list.title %></a></td>
					<td><%= list.name %></td>
					<td><%= list.datetime %></td>
					<td><%= list.hit %></td>
				</tr>
			<% }); %>
	    </tbody>
	    <tfoot>
			<tr>
				<td><a href="/tmpl/db/crud/basic/create"><button>글작성</button></a></td>
			</tr>
	    </tfoot>
	</table>
</body>
</html>